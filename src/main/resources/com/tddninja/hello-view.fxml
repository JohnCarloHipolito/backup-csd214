<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tddninja.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox prefHeight="18.0" prefWidth="375.0">
        <Button onAction="#onAddUser" prefHeight="26.0" prefWidth="75.0" text="Add User" />
        <TextField fx:id="inputName" prefHeight="26.0" prefWidth="150" promptText="name" />
        <TextField fx:id="inputEmail" prefHeight="26.0" prefWidth="150" promptText="email" />
    </HBox>

    <TableView fx:id="userTable" prefHeight="200.0" prefWidth="375.0">
        <columns>
            <TableColumn fx:id="id" prefWidth="75" text="id" />
            <TableColumn fx:id="name" prefWidth="150" text="name" />
            <TableColumn fx:id="email" prefWidth="150" text="email" />
        </columns>
    </TableView>
    <Button onAction="#onLoadUsers" text="Load Users" />
</VBox>
